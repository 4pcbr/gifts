<% form_for :gift, @new_gift, :url => url_for(:wish), :html => { :id => @form_id + @new_gift.id.to_s } do |f| %>
  <div style="float:left;">
    <div style='margin-right: 10px;'>
      <div id='add_foto'></div>
    </div>
    <div style="width:50px; display:block; float:left;">
      <div class='progressbar'></div>
    </div>
  </div>
  <div class="add_wish_form_ul">
    <span>
      <%= f.hidden_field :id %>
      <%= f.hidden_field :image_id %>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </span>
    <span>
      <%= f.label :access %>
      <%= select(:gift, :access, options_for_select([["public", 1], ["friends", 2], ["private", 3]], @new_gift.access)) %>
    </span>
    <span>
      <%= f.submit "save" %>
    </span>
  </div>
<% end %>

<script type='text/javascript'>add_wish("<%= url_for :images %>", "<%= session.session_id.to_s %>", "<%= @form_id + @new_gift.id.to_s %>")</script>