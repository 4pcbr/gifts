<% form_for :gift, @new_gift, :url => url_for(:wish), :html => { :id => @form_id } do |f| %>
  <div style='float: left; margin-right: 10px;'>
    <div id='add_foto'></div>
  </div>
  <div class="add_wish_form_ul">
    <span>
      <%= f.hidden_field :id %>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </span>
    <span>
      <%= f.label :access %>
      <%= select(:gift, :access, options_for_select([["public", 1], ["friends", 2], ["private", 3]], @new_gift.access)) %>
    </span>
    <span>
      <%= f.submit "save" %>
    </span>
  </div>
<% end %>

<script type='text/javascript'>add_wish("<%= url_for :images %>?images_session=<%= session.session_id %>")</script>