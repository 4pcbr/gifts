<div id="login_div" class="login_div">
  <% form_tag session_path do %>
    <p><%= text_field_tag 'login', @login, :size => 12 %></p>

    <p><%= password_field_tag 'password', nil, :size => 12 %></p>

    <p><%= submit_tag 'Log in' %></p>
  <% end %>
</div>

<script type="text/javascript">login_form("login", "password")</script>