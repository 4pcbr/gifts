<% if logged_in? %>
  <div id="user-bar-greeting"><%= link_to_current_user :content_method => :login %></div>
  <div id="user-bar-action"  >(<%= link_to t(:logout), logout_path, { :title => t(:logout) }    %>)</div>
<% else %>
  <div id="user-bar-action"  ><%= link_to t(:login),  login_path,  { :title => t(:login) } %> /
                               <%= link_to t(:signup), signup_path, { :title => t(:signup) } %></div>
<% end %>
