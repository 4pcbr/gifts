<h1><%=t :new_gift %>:</h1>

<div id='uploaded-image'></div>
<div id='uploaded-image-control'>
  <div id='add_foto'></div>
  <a style='display:none;' class='remove' href="javascript:void(0);" onclick="remove_gift_pic();"><span>âœ–</span></a>
</div>

<% form_for @gift, :html => { :id => 'wish-form', :dojoType => 'dijit.form.Form' } do |f| %>
  
  <%= f.error_messages %>
  
  <div style='clear: both;'>
    <p>
      <%= f.label t(:name) %>
      <%= f.text_field :name, :required => 'true', :dojoType => 'dijit.form.ValidationTextBox' %>
    </p>
    <p>
      <%= f.label t(:access) %>:
      <%= select(:gift, :access, options_for_select([[t(:public), 1], [t(:friends), 2], [t(:private), 3]], @gift.access)) %>
    </p>
    <p>
      <%= f.hidden_field :id, :dojoType => 'dijit.form.TextBox' %>
      <%= f.hidden_field :image_id, :dojoType => 'dijit.form.TextBox' %>
      <%= f.submit t(:create), :dojoType => 'dijit.form.Button' %>
    </p>
  </div>
<% end %>

<script type='text/javascript'>
  new_wish_js_001("<%= url_for :images %>", "<%= session.session_id.to_s %>")
</script>